NAME = lem-in

LIB = libft/ft_printf
LIB_A = libft/libft.a $(LIB)/libftprintf.a 

INCLUDES = -I ./libft -I ./libft/ft_printf/ -I ./includes -I ./vizualizer/includes

SOURCES = lem_in.c hash_func.c validation/validate_coords.c validation/find_and_connect_rooms.c bfs.c bellman_ford.c run_ants.c unvisit_rooms.c delete_dup_rooms.c print_graph.c \
		validation/isint.c validation/validation.c validation/validate_rooms.c validation/write_data_in_sroom.c validation/validate_links.c validation/validate_ants.c \
		validation/work_with_data.c qsort.c create_new_arr_path.c create_paths.c create_dup_rooms.c push_ant.c \
		find_disjoint_paths.c manage_directions.c is_need_more_paths.c change_prev_rooms.c check_paths.c count_optimal_paths.c \

SRC = $(addprefix src/, $(SOURCES))

all: $(NAME)

$(NAME):
	@gcc -Wall -Wextra -Werror -o $(NAME) $(SRC) $(LIB_A) -g

clean:
	@rm -f $(NAME)

fclean: clean

re: fclean all
