NAME = lem-in

SDL = -L vizualizer/lib -l SDL2-2.0.0

LIB = libft/ft_printf
LIB_A = libft/libft.a $(LIB)/libftprintf.a 

INCLUDES = -I ./libft -I ./libft/ft_printf/ -I ./includes -I ./vizualizer/includes

SRC = lem_in.c hash_func.c validation/validate_coords.c validation/find_and_connect_rooms.c \
		validation/isint.c validation/validation.c validation/validate_rooms.c validation/write_data_in_sroom.c validation/validate_links.c validation/validate_ants.c \
		helpful_func.c \
		vizualizer/srcs/bresenham.c vizualizer/srcs/coords.c vizualizer/srcs/draw.c vizualizer/srcs/putants.c vizualizer/srcs/vizualizer.c vizualizer/srcs/vizualizer1.c vizualizer/srcs/sdl.c

CCFL = -Wall -Wextra -Werror

.PHONY: all clean fclean re

all: $(NAME)

$(NAME):
	@gcc -Wall -Wextra -Werror -o $(NAME) $(SRC) $(LIB_A) $(SDL) -g

clean:
	@rm -f $(NAME)

fclean: clean

re: fclean all
